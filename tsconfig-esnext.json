{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "lib": ["dom", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "lib-esnext",
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["_book", "node_modules", "lib", "lib-esnext"]
}
