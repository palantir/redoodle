{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "lib": ["dom", "es2015"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "lib-esm",
    "strict": true,
    "target": "ES2015"
  },
  "exclude": ["_book", "node_modules", "lib", "lib-esm"]
}
